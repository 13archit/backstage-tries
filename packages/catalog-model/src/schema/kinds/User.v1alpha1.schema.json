{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "UserV1alpha1",
  "description": "A user describes a person, such as an employee, a contractor, or similar. Users belong to Group entities in the catalog. These catalog user entries are connected to the way that authentication within the Backstage ecosystem works. See the auth section of the docs for a discussion of these concepts.",
  "examples": [
    {
      "apiVersion": "backstage.io/v1alpha1",
      "kind": "User",
      "metadata": {
        "name": "jdoe"
      },
      "spec": {
        "profile": {
          "displayName": "Jenny Doe",
          "email": "jenny-doe@example.com",
          "picture": "https://example.com/staff/jenny-with-party-hat.jpeg",
          "pronouns": "They/them",
          "jobTitle": "Senior Fullstack Engineer",
          "startDateISO": "2021-11-10",
          "manager": "Sarah Parker",
          "timezoneISO": "America/New_York",
          "location": "Working from home",
          "directMessageURL": "https://app.slack.com/client/[WORKPLACE_ID]/[USER_ID]",
          "externalHandles": {
            "facebook": "zuck",
            "github": "mojombo",
            "instagram": "kevin",
            "spotify": "daniel",
            "twitter": "jack",
            "youtube": "jawed"
          }
        },
        "memberOf": ["team-b", "employees"]
      }
    }
  ],
  "allOf": [
    {
      "$ref": "Entity"
    },
    {
      "type": "object",
      "required": ["spec"],
      "properties": {
        "apiVersion": {
          "enum": ["backstage.io/v1alpha1", "backstage.io/v1beta1"]
        },
        "kind": {
          "enum": ["User"]
        },
        "spec": {
          "type": "object",
          "required": ["memberOf"],
          "properties": {
            "profile": {
              "type": "object",
              "description": "Optional profile information about the user, mainly for display purposes. All fields of this structure are also optional. The email would be a primary email of some form, that the user may wish to be used for contacting them. The picture is expected to be a URL pointing to an image that's representative of the user, and that a browser could fetch and render on a profile page or similar.",
              "properties": {
                "displayName": {
                  "type": "string",
                  "description": "A simple display name to present to users.",
                  "examples": ["Jenny Doe"],
                  "minLength": 1
                },
                "email": {
                  "type": "string",
                  "description": "An email where this user can be reached.",
                  "examples": ["jenny-doe@example.com"],
                  "minLength": 1
                },
                "picture": {
                  "type": "string",
                  "description": "The URL of an image that represents this user.",
                  "examples": [
                    "https://example.com/staff/jenny-with-party-hat.jpeg"
                  ],
                  "minLength": 1
                },
                "pronouns": {
                  "type": "string",
                  "description": "The pronouns of the user.",
                  "examples": ["They/them", "He/him", "She/her"],
                  "minLength": 1
                },
                "jobTitle": {
                  "type": "string",
                  "description": "The job title of the user.",
                  "examples": ["Senior Fullstack Engineer", "Product Manager"],
                  "minLength": 1
                },
                "startDateISO": {
                  "type": "string",
                  "description": "The employment start date of the user in ISO format.",
                  "examples": ["2021-11-10"],
                  "minLength": 1
                },
                "manager": {
                  "type": "string",
                  "description": "The direct line manager of the user.",
                  "examples": ["Sarah Parker"],
                  "minLength": 1
                },
                "timezoneISO": {
                  "type": "string",
                  "description": "The primary timezone of the user.",
                  "examples": ["America/New_York"],
                  "minLength": 1
                },
                "location": {
                  "type": "string",
                  "description": "The primary working location of the user.",
                  "examples": ["Working from home", "New York"],
                  "minLength": 1
                },
                "directMessageURL": {
                  "type": "string",
                  "description": "A link to directly message the user.",
                  "examples": [
                    "https://app.slack.com/client/[WORKPLACE_ID]/[USER_ID]"
                  ],
                  "minLength": 1
                },
                "externalHandles": {
                  "type": "object",
                  "description": "A key value list of public profile social handles that can be consistently linked to.",
                  "properties": {
                    "facebook": {
                      "type": "string",
                      "description": "Facebook handle of the user.",
                      "examples": ["zuck"],
                      "minLength": 1
                    },
                    "github": {
                      "type": "string",
                      "description": "Github handle of the user.",
                      "examples": ["mojombo"],
                      "minLength": 1
                    },
                    "instagram": {
                      "type": "string",
                      "description": "Instagram handle of the user.",
                      "examples": ["kevin"],
                      "minLength": 1
                    },
                    "spotify": {
                      "type": "string",
                      "description": "Spotify handle of the user.",
                      "examples": ["daniel"],
                      "minLength": 1
                    },
                    "twitter": {
                      "type": "string",
                      "description": "Twitter handle of the user.",
                      "examples": ["jack"],
                      "minLength": 1
                    },
                    "youtube": {
                      "type": "string",
                      "description": "Youtube handle of the user.",
                      "examples": ["jawed"],
                      "minLength": 1
                    }
                  }
                }
              }
            },
            "memberOf": {
              "type": "array",
              "description": "The list of groups that the user is a direct member of (i.e., no transitive memberships are listed here). The list must be present, but may be empty if the user is not member of any groups. The items are not guaranteed to be ordered in any particular way. The entries of this array are entity references.",
              "items": {
                "type": "string",
                "examples": ["team-b", "employees"],
                "minLength": 1
              }
            }
          }
        }
      }
    }
  ]
}
